{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Login",
  "description": "Login credentials",
  "type": "object",
  "properties": {
    "email": {
      "description": "User email",
      "type": "string",
      "minLength": 4
    },
    "password": {
      "description": "User password",
      "type": "string",
      "minLength": 6
    }
  },
  "required": [
    "email",
    "password"
  ],
  "additionalProperties": false
}